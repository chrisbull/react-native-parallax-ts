{
  "compilerOptions": {
    "target": "es2017",
    "outDir": "build/main",
    "rootDir": "src",
    "moduleResolution": "node",
    "module": "commonjs",
    "declaration": true,
    "inlineSourceMap": true,
    "esModuleInterop": true,

    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "jsx": "react",
    "lib": [
      "es2015",
      "dom",
      "esnext.asynciterable"
    ],
    "noImplicitAny": false,
    "noUnusedParameters": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "pretty": true,
    "removeComments": true,
    "skipLibCheck": true,
    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      },
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "types": [
    "jest"
  ],
  "include": [
    "src",
    "typings",
    "packages"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}
